{
    "name": "bahn-language",
    "displayName": "Bahn Language",
    "description": "Bahn support for VS Code",
    "version": "1.0.2",
    "publisher": "trinnguyen",
    "repository": "https://github.com/trinnguyen/bahndsl",
    "license": "GPL-3.0",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:bahn"
    ],
    "main": "out/extension",
    "contributes": {
        "languages": [
            {
                "id": "bahn",
                "aliases": [
                    "Bahn",
                    "bahn"
                ],
                "extensions": [
                    "bahn"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "bahn",
                "scopeName": "source.bahn",
                "path": "./syntaxes/bahn.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "bahn",
                "path": "snippets/snippets.json"
            }
        ]
    },
    "dependencies": {
        "vscode-languageclient": "7.0.0"
    },
    "devDependencies": {
        "@types/node": "14.14.14",
        "@types/vscode": "1.52.0",
        "typescript": "4.1.3",
        "vsce": "1.83.0"
    },
    "scripts": {
        "compile": "tsc -p ./src",
        "package": "tsc -p ./src && vsce package",
        "publish": "tsc -p ./src && vsce publish"
    }
}
