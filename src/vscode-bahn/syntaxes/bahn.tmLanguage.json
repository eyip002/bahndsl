{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bahn",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bahn",
				"match": "\\b(aspects|available|bit|blocks|boards|bool|by|calibration|cargo|cm|conflicts|crossings|def|destination|down|else|end|false|features|float|for|from|g|get|grant|hours|if|in|initial|int|is|kg|km|layout|length|m|main|minutes|module|nil|normal|not|occupied|overlap|passenger|path|peripherals|platforms|point|points|return|reverse|route|routes|seconds|segment|segments|set|side|signal|signals|source|stem|steps|straight|string|to|trains|true|type|up|var|wait|weight)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.bahn",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bahn",
					"match": "\\\\."
				}
			]
		}
		,
		"comments": {
			"name": "comment.line.double-dash.bahn",
			"begin": "#",
			"end": "$\n?"
		}
	},
	"scopeName": "source.bahn"
}