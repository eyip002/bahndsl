{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Bahn",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.bahn",
				"match": "\\b(aspects|available|bit|blocks|boards|bool|calibration|cargo|cm|config|crossings|def|down|else|end|extern|false|features|float|for|from|get|grant|hours|if|in|initial|int|is|kg|km|layout|length|main|minutes|module|normal|not|occupied|overlap|passenger|peripherals|platforms|point|points|return|reverse|routes|schema|seconds|segment|segments|set|side|signal|signals|stem|steps|straight|string|to|trains|true|type|up|wait|weight|while)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.bahn",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.bahn",
					"match": "\\\\."
				}
			]
		}
		,
		"comments": {
			"name": "comment.line.double-dash.bahn",
			"begin": "#",
			"end": "$\n?"
		}
	},
	"scopeName": "source.bahn"
}